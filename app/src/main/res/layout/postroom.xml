<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/findRoomiebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:text="Find A Roomie"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold" />

            <Button
                android:id="@+id/postRoombtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:text="Post Room"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"  />

            <Button
                android:id="@+id/myProfilebtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:text="My Profile"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold" />

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="111dp"
                android:layout_height="22dp"
                android:background="@color/common_google_signin_btn_text_dark_focused"
                android:text="Log out"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="12sp"
                android:textStyle="italic"  />

        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please fill up the form below to have your roommate ad posted!"
                android:textAlignment="center"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/condoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="serif-monospace"
                android:hint="Condominium/Dorm Name"
                android:inputType="textPersonName"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Number of Beds" />

            <!--<Spinner-->
            <!--android:id="@+id/spn_bed"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:entries="@array/num_bed" />-->

            <Spinner
                android:id="@+id/spn_bed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/num_bed" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Number of Baths" />

            <!--<Spinner-->
            <!--android:id="@+id/spn_bath"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:entries="@array/num_bath" />-->


            <Spinner
                android:id="@+id/spn_bath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/num_bath" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Restrictions" />

            <!--<Spinner-->
            <!--android:id="@+id/spn_gen"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:entries="@array/room_gen" />-->


            <Spinner
                android:id="@+id/spn_gen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/room_gen" />

            <EditText
                android:id="@+id/rent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="serif-monospace"
                android:hint="Monthly Rent"
                android:inputType="numberDecimal" />


            <CheckBox
                android:id="@+id/termsCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="I agree to all of FindARoomie's terms and agreements."
                android:textSize="10sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_dark"
                android:fontFamily="serif-monospace"
                android:text="Submit "
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>